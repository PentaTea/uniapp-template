//建议使用 app.config.js 进行路由配置
{
  "pages": [],
  "preloadRule": {},
  "globalStyle": {
    "navigationStyle": "custom",
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "uni-typescript",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#fff",
    "backgroundColorTop": "#6FBCFF",
    "usingComponents": {},
    "app-plus": {
      "bounce": "none"
    },
    "mp-alipay": {
      "allowsBounceVertical": "NO"
    }
  },
  "condition": {
    //模式配置，仅开发期间生效
    "current": 0, //当前激活的模式(list 的索引项)
    "list": []
  },
  "topWindow": {
    "path": "windows/topWindow",
    "style": {
      "height": "70px"
    },
    "matchMedia": {
      "minWidth": 0
    }
  },
  "leftWindow": {
    "path": "windows/leftWindow",
    "style": {
      "width": "240px"
    }
  }
}
