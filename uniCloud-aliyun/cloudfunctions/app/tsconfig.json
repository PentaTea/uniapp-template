{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": ["src/**/*.ts", "src/**/*.js"]
}
